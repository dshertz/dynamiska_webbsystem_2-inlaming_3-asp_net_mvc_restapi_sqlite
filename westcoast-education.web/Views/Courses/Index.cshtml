@{
    ViewData["Title"] = "Kurser";
}
@model IList<westcoast_education.web.ViewModels.CourseListViewModel>

<section class="hero">
    <div>
        <h2>// Alla kurser</h2>
        <table>
            <thead>
                <tr>
                    <th></th>
                    <th>&lt;Kursnamn&gt;</th>
                    <th>&lt;Startdatum&gt;</th>
                    <th>&lt;Antal veckor&gt;</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var course in Model)
                {
                    <tr>
                        <td></td>
                        <td><a class="links" asp-action="details" asp-route-courseId="@course.Id">@course.CourseName</a>
                        </td>
                        <td>@course.StartDate.Year-@course.StartDate.Month-@course.StartDate.Day</td>
                        <td>@course.LengthInWeeks</td>
                        <td></td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <td>&nbsp;</td>
                <td>&nbsp;</td>
                <td>&nbsp;</td>
                <td>&nbsp;</td>
                <td>&nbsp;</td>
            </tfoot>
        </table>
        <div id="add-course-button"><a class="links" asp-action="create" asp-controller="Courses">LÃ¤gg till en kurs</a>
        </div>
    </div>
</section>